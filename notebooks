import pandas as pd

#----------Calculate summary statistics----------
# Load the dataset
file_path = r'D:\Document\fun datascience\ecommerce_customer_data_custom_ratios.csv'
df = pd.read_csv(file_path)

# Summary statistics for numerical columns: mean, median, standard deviation, range
numerical_cols = ['Product Price', 'Quantity', 'Total Purchase Amount', 'Customer Age', 'Returns']
summary_stats = df[numerical_cols].agg(['mean', 'median', 'std', lambda x: x.max() - x.min()])
print("Summary Statistics for Numerical Columns:")
print(summary_stats)

# Analyze distribution of categorical variables: 'Product Category', 'Payment Method', 'Gender', 'Churn'
categorical_cols = ['Product Category', 'Payment Method', 'Gender', 'Churn']
categorical_distribution = {col: df[col].value_counts() for col in categorical_cols}

print("\nDistribution of Categorical Variables:")
for col, distribution in categorical_distribution.items():
    print(f"\n{col}:\n{distribution}")

#----------Analyze distribution of categorical variables----------

# Categorical variables to analyze (you can add more based on your dataset)
categorical_cols = ['Product Category', 'Payment Method', 'Gender', 'Churn']

# Analyze the distribution of categorical variables
for col in categorical_cols:
    print(f"\nDistribution of {col}:")
    print(df[col].value_counts())
